{
    "tasks": [
        {
            "type": "shell",
            "label": "configure",
            "command": "cmake",
            "args": [
                "-B",
                "build/arm64-v8a",
                "-S",
                ".",
                "-G",
                "Ninja",
                "-DCMAKE_SYSTEM_VERSION:STRING=24",
                "-DANDROID_NATIVE_API_LEVEL:STRING=24",
                "-DANDROID_ABI:STRING=arm64-v8a",
                "-DANDROID_PLATFORM:STRING=android-24",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
                "-DCMAKE_SYSTEM_NAME=Android",
                "-DANDROID_NDK:STRING=$env:NDK_HOME",
                "-DCMAKE_TOOLCHAIN_FILE:STRING=$env:NDK_HOME/build/cmake/android.toolchain.cmake",
                ""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "cmake configure"
        },
        {
            "type": "shell",
            "label": "generate",
            "command": "cmake",
            "args": [
                "--build",
                "build/arm64-v8a",
                "--config",
                "Release",
                "--",
                "-j",
                "8"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "dependsOn": "configure",
            "detail": "cmake build"
        },
        {
            "type": "shell",
            "label": "push",
            "detail": "push binary to device",
            "isBackground": true,
            "group": "test",
            "command": "adb",
            "args": [
                "push",
                "prebuilt/arm64-v8a/uinjector",
                "/data/local/tmp"
            ]
        },
        {
            "type": "shell",
            "label": "chmod",
            "detail": "chmod binary",
            "isBackground": true,
            "group": "test",
            "command": "adb",
            "args": [
                "shell",
                "chmod",
                "+x",
                "/data/local/tmp/uinjector"
            ]
        },
        {
            "type": "shell",
            "label": "deploy",
            "detail": "Deploy binary to device (push + chmod)",
            "isBackground": false,
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "dependsOn": [
                "push",
                "chmod"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "build-and-deploy",
            "detail": "Build and deploy binary to device",
            "isBackground": false,
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "generate",
                "deploy"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "run",
            "detail": "Build, deploy and run binary on device",
            "isBackground": false,
            "group": "test",
            "command": "adb",
            "args": [
                "shell",
                "/data/local/tmp/uinjector"
            ],
            "dependsOn": [
                "generate",
                "deploy"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++.exe build active file",
            "command": "D:\\LLVM\\bin\\clang++.exe",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "lldb-server",
            "command": "adb",
            "args": [
                "shell",
                "su",
                "-c",
                "./data/local/tmp/lldb-server",
                "p",
                "--server",
                "--listen",
                "unix-abstract:///data/local/tmp/debug1.sock"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "detail": "lldb-server"
        }
    ],
    "version": "2.0.0"
}